<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-widget-center" version="0.0.1"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <name>CDVWidgetCenter</name>

    <js-module name="CDVWidgetCenter" src="www/CDVWidgetCenter.js">
        <clobbers target="CDVWidgetCenter" />
    </js-module>

    <platform name="ios">
        <config-file target="config.xml" parent="/*">

            <feature name="CDVWidgetCenter">
                <param name="ios-package" value="CDVWidgetCenter" />
            </feature>

        </config-file>

        <!-- Add in the plugin .swift files here -->
        <source-file src="src/ios/CDVWidgetCenter.swift" />

        <!-- Add in the swift-support plugin by default -->
        <dependency id="cordova-plugin-add-swift-support" version="1.7.2"/>
    </platform>
</plugin>
